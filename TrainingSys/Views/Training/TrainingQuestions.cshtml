@{
    ViewData["Title"] = "Training Questions";
}
@model TrainMaster

<div class="page-header d-print-none">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-6">
                <!-- Page pre-title -->
                <div class="page-pretitle">
                    Question - Training Master
                    <h2 class="page-title">
                        Question Details
                    </h2>
                </div>
            </div>
        </div>

    </div>
</div>



<div class="page-body">
    <div class="container-fluid ">
        <div class="card">
            <div class="card-body">
                <div class="row g-2 align-items-center">
                    <div class="col-6">

                        <h3>Edit Question</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-1">
                        <div class="form-group-inline">
                            <label class="form-label">Number:</label>
                            @Html.TextBoxFor(m => m.WrittenQuestion.ItemNo, new { @type = "number", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-11">
                        <div class="form-group">
                            <label class="form-label">Question:</label>
                            @Html.TextAreaFor(m => m.WrittenQuestion.Question, new { @type = "text", @class = "form-control", @rows = "6" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group-inline">
                            <label class="form-label">A:</label>
                            @Html.TextBoxFor(m => m.WrittenQuestion.choiceA, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group-inline">
                            <label class="form-label">B:</label>
                            @Html.TextBoxFor(m => m.WrittenQuestion.choiceB, new { @type = "text", @class = "form-control " })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group-inline">
                            <label class="form-label">C:</label>
                            @Html.TextBoxFor(m => m.WrittenQuestion.choiceC, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group-inline">
                            <label class="form-label">D:</label>
                            @Html.TextBoxFor(m => m.WrittenQuestion.choiceD, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group-inline">
                            <label class="form-label">Answer:</label>
                            @Html.TextBoxFor(m => m.WrittenQuestion.Answer, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>
</div>
