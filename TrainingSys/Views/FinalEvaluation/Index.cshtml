@{
    ViewData["Title"] = "FINAL EVALUATION";
}
@model Evaluation;


<div class="page-header d-print-none">
    <div class="container-fluid">
        <div class="row g-2 align-items-center">
            <div class="col-6">
                <!-- Page pre-title -->
                <div class="page-pretitle">
                    Index - POST EVALUATION
                    <h2 class="page-title">
                        List of Post Evaluation
                    </h2>
                </div>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">

            </div>

        </div>

    </div>
</div>

<div class="page-body">
    <div class="container-fluid ">
        <div class="card">

            <div id="table-default">
                <div class="col- d-lg-flex px-3 pt-3">

                    <div class="d-flex text-center text-lg-start mb-3">
                        <div class="text-muted">
                            Show
                            <div class="mx-2 d-inline-block w-25">
                                <input id="entries" type="number" class="form-control" value="10" autocomplete="off">
                            </div>
                            entries
                        </div>

                    </div>

                    <div class="input-icon mb-3 ms-auto">
                        <input type="search" class="search form-control" placeholder="Search">
                        <span class="input-icon-addon">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" /><path d="M21 21l-6 -6" /></svg>
                        </span>

                    </div>
                </div>

                <hr class="m-0">


                <div class="table-responsive">
                    <table class="table text-muted table-mobile-sm" id="datatable" data-filename="Evaluation Report">

                        <thead class="table-thead">
                            <tr>
                                <th><button class="table-sort" data-sort="sort-HID">ID</button></th>
                                <th><button class="table-sort" data-sort="sort-ExamId">Exam Id</button></th>
                                <th><button class="table-sort" data-sort="sort-Name">Full Name</button></th>
                                <th><button class="table-sort" data-sort="sort-Position">Position</button></th>
                                <th><button class="table-sort" data-sort="sort-DeptStore">Department/Store</button></th>
                                <th><button class="table-sort" data-sort="sort-Venue">Venue</button></th>
                                <th><button class="table-sort" data-sort="sort-EvalDate">Evaluation Date</button></th>          
                            </tr>
                        </thead>

                        <tbody class="table-tbody">
                             @foreach (var row in Model.evaluation)
                            {
                                 <tr>

                                    <td data-label="Id" class="text-nowrap sort-HID">
                                        <a href="FinalEvaluation/Details/@row.HId" style="text-decoration: none; color: inherit;">@row.HId</a>
                                    </td>

                                    <td data-label="Exam Id" class="text-nowrap sort-ExamId">
                                        <a href="FinalEvaluation/Details/@row.HId" style="text-decoration: none; color: inherit;">@row.ExamId</a>
                                    </td>

                                    <td data-label="Full Namd" class="text-nowrap sort-Name">
                                        <a href="FinalEvaluation/Details/@row.HId" style="text-decoration: none; color: inherit;">@row.TraineeName</a>
                                    </td>

                                    <td data-label="Position" class="text-nowrap sort-Position">
                                        <a href="FinalEvaluation/Details/@row.HId" style="text-decoration: none; color: inherit;">@row.Position</a>
                                    </td>

                                    <td data-label="Department/Store" class="text-nowrap sort-DeptStore">
                                        <a href="FinalEvaluation/Details/@row.HId" style="text-decoration: none; color: inherit;">@row.DepartmentStore</a>
                                    </td>

                                    <td data-label="Venue" class="text-nowrap sort-Venue">
                                        <a href="FinalEvaluation/Details/@row.HId" style="text-decoration: none; color: inherit;">@row.Venue</a>
                                    </td>

                                    <td data-label="Evaluation Date" class="text-nowrap sort-EvalDate">
                                        <a href="FinalEvaluation/Details/@row.HId" style="text-decoration: none; color: inherit;">@row.EvaluationDate</a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>

                </div>

                <div class="card-footer d-flex align-items-center">
                    <ul class="pagination m-0 ms-auto"></ul>
                </div>

            </div>
        </div>
    </div>
</div>
                












