@{
    ViewData["Title"] = "FINAL EVALUATION DETAILS";
}
@model Evaluation;



<div class="page-header d-print-none">
    <div class="container-fluid">
        <div class="row g-2 align-items-center">
            <div class="col-6">
                <!-- Page pre-title -->
                <div class="page-pretitle">
                    Details - POST EVALUATION
                    <h2 class="page-title">
                        List of Post Evaluation
                    </h2>
                </div>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
            </div>

        </div>

    </div>
</div>



<div class="page-body">
    <div class="container-fluid ">
        <!-- Trainee Info -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Trainee Information</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="TraineeName">Trainee ID Number:</label>
                            @Html.TextBoxFor(m => m.Evaluations.EmpId, new { @class = "form-control", @readonly = "True" })
                        </div>
                    </div>

                    <div class="col-md-9">
                        <div class="form-group">
                            <label for="TraineeName">Full Name of Trainee:</label>
                            @Html.TextBoxFor(m => m.Evaluations.TraineeName, new { @class = "form-control", @readonly = "true" })
                        </div>
                    </div>


                    @Html.HiddenFor(m => m.Evaluations.Position, new { @class = "form-control" })

                    @Html.HiddenFor(m => m.Evaluations.Trainor, new { @class = "form-control" })

                    @Html.HiddenFor(m => m.Evaluations.DepartmentStore, new { @class = "form-control" })

                    @Html.HiddenFor(m => m.Evaluations.EvaluationDate, new { @class = "form-control date-input" })

                    @Html.HiddenFor(m => m.Evaluations.Venue, new { @class = "form-control" })

                </div>
            </div>
        </div>


        <div id="hideBody">
            @foreach (var part in Model.EvaluationDetails.Select(m => m.Part).Distinct())
            {

                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            @if (part == 1)
                            {
                                <h3 class="card-title">Part @part: Training Rating</h3>
                                <p class="mt-3">Rate the training session using the scale provided above.</p>


                                <div class="col-auto">
                                    <span class="badge bg-light-success text-success">5 - Strongly Agree</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-primary text-primary">4 - Agree</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-warning text-warning">3 - Neutral</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-danger text-danger">2 - Disagree</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-muted text-dark">1 - Strongly Disagree</span>
                                </div>
                            }


                            @if (part == 2)
                            {
                                <h3 class="card-title">Part @part: Training Rating</h3>
                                <p class="mt-3">Rate the training session using the scale provided above.</p>

                                <div class="col-auto">
                                    <span class="badge bg-light-success text-success">5 - Strongly Agree</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-primary text-primary">4 - Agree</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-warning text-warning">3 - Neutral</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-danger text-danger">2 - Disagree</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-muted text-dark">1 - Strongly Disagree</span>
                                </div>
                            }

                            @if (part == 3)
                            {
                                <h3 class="card-title">Part @part: Post-Training Rating</h3>
                                <p class="mt-3">Rate the training session using the scale provided above.</p>

                               <div class="col-auto">
                                    <span class="badge bg-light-success text-success">5 - Strongly Agree</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-primary text-primary">4 - Agree</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-warning text-warning">3 - Neutral</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-danger text-danger">2 - Disagree</span>
                                </div>
                                <div class="col-auto">
                                    <span class="badge bg-light-muted text-dark">1 - Strongly Disagree</span>
                                </div>

                            }

                            @if (part == 4)
                            {
                                <h3 class="card-title">Part @part: Additional Comments</h3>
                                <p>Please provide additional comments to help us improve our training:</p>

                            }


                        </div>
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            @for (int i = 0; i < Model.EvaluationDetails.Count; i++)
                            {
                                var row = Model.EvaluationDetails[i];
                                if (part == row.Part)
                                {
                                    <div class="mb-3">
                                        <label>@row.EvalNumber. @row.Question</label>
                                        <br />
                                        <label class="translated-text" style="font-weight: normal;">
                                            (@row.Translate)
                                        </label>
                                        @{
                                            string answerBadgeClass;

                                            // Set badge class for row.strAnswer
                                            switch (row.strAnswer)
                                            {
                                                case "5":
                                                    answerBadgeClass = "bg-light-success text-success";
                                                    break;
                                                case "4":
                                                    answerBadgeClass = "bg-light-primary text-primary";
                                                    break;
                                                case "3":
                                                    answerBadgeClass = "bg-light-warning text-warning";
                                                    break;
                                                case "2":
                                                    answerBadgeClass = "bg-light-danger text-danger";
                                                    break;
                                                case "1":
                                                    answerBadgeClass = "bg-light-muted text-dark";
                                                    break;
                                                default:
                                                    answerBadgeClass = "bg-light-muted text-dark"; // Default badge class for unexpected values
                                                    break;
                                            }
                                        }
                                        <div class="mt-2">
                                            <strong>Answer:</strong>
                                            <span class="badge @answerBadgeClass">
                                                @row.strAnswer
                                            </span>
                                        </div>

                                        @if (!string.IsNullOrEmpty(row.strComment))
                                        {
                                            <div class="mt-2">
                                                <strong>Comment:</strong>
                                                <span>@row.strComment</span>
                                            </div>
                                        }
                                    </div>



                                }

                            }
                        </div>


                    </div>
                </div>



            }

            @Html.HiddenFor(m => m.Id)
        </div>
    </div>
